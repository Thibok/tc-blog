{% extends 'layout.twig' %}

{% block content %}

        <div id="wrap">
            <div id="main" class="container pt-4">
                <div class="row">
                    {% include 'admin_menu.twig' %}
                    <div class="col-lg-8 my-5" id="admin_block">
                        <h1 class="pt-3 pl-1 text-white"><img id="ico_blue" src="/pictures/ico_blue.png" alt="icon"/>{{ news.getTitle }}</h1>
                        <p id="date_publish" class="pl-2">Commentaire posté le <span class="font-italic">{{ comment.getAddAt | date("d/m/Y à H\\hi") }}</span> par <span class="font-weight-bold">{{ comment.getUser }}</span></p>
                        <p class="p-2 text-white">{{ comment.getContent }}</p>
                        <div class="text-center my-5">
                            <a href="/admin/validation_commentaire_{{ comment.getId }}?token={{ user.getToken.getValue }}" role="button" class="btn btn-success mr-2"><img class="mr-1 mb-1"src="/pictures/valid.png" alt="valid icon"/>Valider</a>
                            <a href="/admin/supprimer_commentaire_{{ comment.getId }}?token={{ user.getToken.getValue }}" role="button" class="btn btn-danger ml-2"><img class="mr-1" src="/pictures/delete.png" alt="delete icon"/>Supprimer</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

{% endblock %}